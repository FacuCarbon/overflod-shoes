<!DOCTYPE html>
<html lang="en">

<!--HEAD-->
<%-include('partials/head') %>
<body>
  <!--HEADER-->
  <%- include('partials/header') %>
  <!--CARRUSEL-->
  <div id="carouselExampleControls" class="carousel slide my-2" data-ride="carousel">
    <div class="carousel-inner ">
      <div class="carousel-item active">
        <img class="d-block w-75 ml-auto mr-auto" src="/img/carrusel/banner1.jpg" alt="First slide">
      </div>
      <div class="carousel-item ">
        <img class="d-block w-75 ml-auto mr-auto" src="/img/carrusel/banner2.png" alt="Second slide">
      </div>
      <div class="carousel-item ">
        <img class="d-block w-75 ml-auto mr-auto" src="/img/carrusel/banner3.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!--Fin carrusel-->
  <!-- <a class="verTodos" href="/productos">Ver todos los productos</a> -->
  <!--Articulos Calzados-->
  
  <div class="container">
    <div class="row calzado mt-5">
      <% productos.forEach(producto => { %>
      <div class="col-md-4 col-sm-6 col-xs-12 fotoArticulo">
        <!-- CALZADO 1-->
        <div class="p-1 text-center">
          <figure>
            <a href="/productos/detalle/<%= producto.id %>"><img src="/img/productosAgregados/<%= producto.imagenes %>" alt=""></a>
          </figure>
          <article class="elNombre">
            <h3> <%= producto.nombre %></h3>
            <p><%= producto.marca.nombre %> </p>
          </article>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <!--Fin articulos-->
  <!--Boton volver arriba-->
  <div class="volver-arriba">
    <a href="#">
      <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-arrow-up-circle-fill" fill="currentColor"
        xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd"
          d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z" />
      </svg></a>
    <p>Subir</p>
  </div>
  <!--FOOTER-->
  <%- include('partials/footer') %>
  
</body>
</html>